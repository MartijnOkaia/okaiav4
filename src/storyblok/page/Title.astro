---

import { storyblokEditable } from '@storyblok/astro'

const { blok } = Astro.props

---


<div {...storyblokEditable(blok)} class={`py-20 bg-${blok.background}`}>

    <div class="container mx-auto">

        <h2 class="animate text-xl max-w-[900px] font-[450]">{blok.title}</h2>
        
        <a href={blok.button.cached_url} class="button"></a>

    </div>

</div> 